<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/style.css">
    <title>Document</title>
</head>
<body>
    <div class="headbar">
    <div class="tabs">
        <button class="btn removeAboutUs">remove aboutUs</button>
        <button class="btn">update news</button>
        <button class="btn remove">remove news</button>
        <button class="btn logout">logout</button>
    </div>
    <div class="search__news__container">
        <form class="search">
            <button class="search__btn" type="submit">جستجو</button>
            <input class="search__feild" type="text" placeholder="عنوان" name="title">
        </form>
        <div class="results"></div>
    </div>
    <div class="clear"></div>
    </div>
     <div class="news__container"></div>
     <div class="clear"></div>
    <div class="add__news__container">
         <form class="form1 addNews">
            <input type="text" placeholder="Tilte" name="title">
            <input type="text" placeholder="Description" name="description">
            <label for="myfile">Select a file:</label>
            <input type="file" value="image" name="image" accept=".gif, .jpg, .jfif, .png, .jpeg" required>
            <span></span>
            <button type="submit">Add</button>
        </form>
        <form class="update form1">
            <input type="text" placeholder="Tilte" name="title">
            <input type="text" placeholder="Description" name="description">
            <button type="submit">Update News</button>
        </form>
    </div>
    <div>
         <form class="form1 aboutUs">
            <input type="text" placeholder="Tilte" name="title" required>
            <input type="text" placeholder="Description" name="description" required>
            <label for="myfile">Select a file:</label>
            <input type="file" value="image" name="image" accept=".gif, .jpg, .jfif, .png, .jpeg" required>
            <span></span>
            <button type="submit">Add</button>
        </form>
    </div>
    <div>
         <form class="form1 team">
            <input type="text" placeholder="Name" name="name" required>
            <input type="text" placeholder="Resume" name="resume" required>
            <label for="myfile">Select a file:</label>
            <input type="file" value="image" name="image" accept=".gif, .jpg, .jfif, .png, .jpeg" required>
            <span></span>
            <button type="submit">Add</button>
        </form>
    </div>

    <!-- aboutus container and template-->
    <div class="aboutUs__container"></div>
    <script id="aboutUs__template" type="text/html">
        <div>
            <div class="news__title">\{{title}}</div>
            <div>
                <div class="news__description">\{{description}}</div>
                <input class="check" type="checkbox" value="\{{id}}">
            </div>    
        </div>
    </script>

    <!-- news template -->
    <script id="list__news__template" type="text/html">
        <div>
            <div class="news__title">\{{title}}</div>
            <div>
                <div class="news__description">\{{description}}</div>
                <button class="btn__check" onclick="updateNews('\{{updateID}}')">Update</button>
                <input class="check" type="checkbox" value="\{{id}}">
        </div>    
        </div>
    </script>
   
   <script id="search__news__template" type="text/html">
        <div>
            <div class="news__title">\{{fTitle}}</div>
            <div class="news__description">\{{fDescription}}</div>

        </div>
    </script>
    
    <script src="./js/plugins/mustache.min.js"></script>
    <script src="./js/plugins/axios.min.js"></script>
    <script src="./js/news.js"></script>
</body>
</html>